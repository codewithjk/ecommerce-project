<!-- response modal -->
<div
  class="modal fade"
  id="responseModal"
  tabindex="-1"
  role="dialog"
  aria-labelledby="responseModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="responseModalLabel">Response</h5>
        <button
          type="button"
          class="close"
          data-dismiss="modal"
          aria-label="Close"
        >
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <!-- Modal body content will be populated dynamically -->
      </div>
    </div>
  </div>
</div>

<!-- cancel order modal -->
<div
  id="cancelOrderModal"
  class="modal fade zoomIn"
  tabindex="-1"
  aria-hidden="true"
>
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
          id="close-modal"
        ></button>
      </div>
      <div class="modal-body">
        <div class="mt-2 text-center">
          <lord-icon
            src="https://cdn.lordicon.com/gsqxdxog.json"
            trigger="loop"
            colors="primary:#f7b84b,secondary:#f06548"
            style="width: 100px; height: 100px"
          ></lord-icon>
          <div class="mt-4 pt-2 fs-15 mx-4 mx-sm-5">
            <h4>Are you sure ?</h4>

            <p class="text-muted mx-4 mb-0">
              Are you sure you want to cancel this order ?
            </p>
          </div>
        </div>
        <textarea
          id="cancel-reason"
          class="form-control"
          rows="3"
          placeholder="Enter reason for cancellation"
        ></textarea>
        <div class="d-flex justify-content-center align-items-center">
          <p id="order-cancel-error" class="text-danger"></p>
          <p id="order-cancel-succcess" class="text-succcess"></p>
        </div>

        <div class="d-flex gap-2 justify-content-center mt-4 mb-2">
          <button
            type="button"
            class="btn w-sm btn-light"
            data-bs-dismiss="modal"
          >
            Close
          </button>
          <button
            type="button"
            class="btn w-sm btn-danger"
            id="cancel-order-button"
          >
            Yes, Cancel It!
          </button>
        </div>
      </div>
    </div>
    <!-- /.modal-content -->
  </div>
  <!-- /.modal-dialog -->
</div>
<!-- /.modal -->

<!-- return product modal -->
<div
  id="returnProductModal"
  class="modal fade zoomIn"
  tabindex="-1"
  aria-hidden="true"
>
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
          id="close-modal"
        ></button>
      </div>
      <div class="modal-body">
        <div class="mt-2 text-center">
          <lord-icon
            src="https://cdn.lordicon.com/gsqxdxog.json"
            trigger="loop"
            colors="primary:#f7b84b,secondary:#f06548"
            style="width: 100px; height: 100px"
          ></lord-icon>
          <div class="mt-4 pt-2 fs-15 mx-4 mx-sm-5">
            <h4>Are you sure ?</h4>

            <p class="text-muted mx-4 mb-0">
              Are you sure you want to return this product ?
            </p>
          </div>
        </div>
        <textarea
          id="return-reason"
          class="form-control"
          rows="3"
          placeholder="Enter reason for return"
        ></textarea>
        <div class="d-flex justify-content-center align-items-center">
          <p id="product-return-error" class="text-danger"></p>
          <p id="product-return-succcess" class="text-succcess"></p>
        </div>

        <div class="d-flex gap-2 justify-content-center mt-4 mb-2">
          <button
            type="button"
            class="btn w-sm btn-light"
            data-bs-dismiss="modal"
          >
            Close
          </button>
          <button
            type="button"
            class="btn w-sm btn-danger"
            id="return-product-button"
          >
            Yes, Return It!
          </button>
        </div>
      </div>
    </div>
    <!-- /.modal-content -->
  </div>
  <!-- /.modal-dialog -->
</div>
<!-- /.modal -->

<%- include("./layouts/footer") %>
<script src="/static/script/orderDetails.js"></script>
