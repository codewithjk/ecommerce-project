<%- include("./layouts/header") %>
  <section class="vh-100">
    <div class="container py-5 h-100">
      <div class="row d-flex align-items-center justify-content-center h-100">
        <div class="col-md-8 col-lg-7 col-xl-6">
          <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.svg" class="img-fluid"
            alt="Phone image" />
        </div>
        <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
          <form id="forgotForm">
            <!-- Code input -->
            <div class="form-outline mb-4">
              <label class="form-label" for="form1Example13">Confirmation Code</label>
              <input id="code" name="code" class="form-control form-control-lg" required />
              <div class="d-none" id="emailError">
                <p class="text-danger">Please enter a valid email address.</p>
              </div>

              <p class="text-danger emailError hideError"></p>
            </div>

            <!-- Submit button -->
            <button type="submit" class="btn btn-primary btn-lg btn-block">
              Verify
            </button>
          </form>
        </div>
      </div>
    </div>
  </section>
  <script src="/script/confirmationPage.js"></script>

  <%- include("./layouts/footer") %>