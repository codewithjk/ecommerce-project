<%- include("./layouts/header") %>
  <section class="vh-100">
    <div class="container py-5 h-100">
      <div class="row d-flex align-items-center justify-content-center h-100">
        <div class="col-md-8 col-lg-7 col-xl-6">
          <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.svg" class="img-fluid"
            alt="Phone image" />
        </div>
        <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
          <form id="loginForm">
            <!-- Email input -->
            <div class="form-outline mb-4">
              <label class="form-label" for="form1Example13">Email address</label>
              <input id="email" name="email" class="form-control form-control-lg" placeholder="example@gmail.com"
                required />
              <div class="d-none" id="emailError">
                <p class="text-danger">Please enter a valid email address.</p>
              </div>

              <p class="text-danger emailError hideError"></p>
            </div>

            <!-- Password input -->
            <div class="form-outline mb-4">
              <label class="form-label" for="form1Example23">Password</label>
              <input type="password" id="password" name="password" class="form-control form-control-lg" required />
              <div class="d-none" id="passwordError">
                <p class="text-danger">Password should have 8 characters.</p>
              </div>

              <p class="text-danger passwordError hideError"></p>
            </div>

            <div class="d-flex justify-content-end align-items-center mb-2">
              <!-- Checkbox -->
              <a href="/forgot-password">Forgot password?</a>
            </div>
            <div class="d-flex justify-content-end align-items-center mb-2">
              <!-- Checkbox -->
              <a href="/register">Create new account</a>
            </div>

            <!-- Submit button -->
            <button type="submit" class="btn btn-hover btn-soft-primary">
              Sign in
            </button>

            <div class="divider d-flex align-items-center my-4">
              <p class="text-center fw-bold mx-3 mb-0 text-muted">OR</p>
            </div>

            <button class="btn btn-hover btn-soft-secondary" id="google" role="button">
              <i class="fa-regular fa-google me-2"></i>Continue with Google
            </button>
            <button id="facebook" class="btn btn-hover btn-soft-primary" role="button">
              <i class="fa-regular fa-facebook me-2"></i>Continue with Facebook
            </button>
          </form>
        </div>
      </div>
    </div>
  </section>

  <!--  -->

  <script src="/script/loginPage.js"></script>

  <%- include("./layouts/footer") %>