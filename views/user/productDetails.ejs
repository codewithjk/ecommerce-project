<!-- swiper -->
<link rel="stylesheet" href="https://unpkg.com/swiper/swiper-bundle.min.css" />

<%- include("./layouts/header") %> <%- include("./layouts/navbar") %>
<section
  class="ecommerce-about"
  style="
    background-image: url('/static/frontend/images/profile-bg.jpg');
    background-size: cover;
    background-position: center;
  "
>
  <div class="bg-overlay bg-primary" style="opacity: 0.85"></div>
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-lg-6">
        <div class="text-center">
          <h1 class="text-white mb-0">Product Details</h1>
          <nav aria-label="breadcrumb">
            <ol class="breadcrumb breadcrumb-light justify-content-center mt-4">
              <li class="breadcrumb-item">
                <p onclick="history.back()" style="cursor: pointer">Product</p>
              </li>
              <li class="breadcrumb-item active" aria-current="page">
                Product Details
              </li>
            </ol>
          </nav>
        </div>
      </div>
    </div>
  </div>
</section>

<section class="section">
  <div class="container">
    <div class="row gx-2">
      <div class="col-lg-6">
        <div
          id="zoom-container"
          class="position-absolute top-10 start-40 z-1"
          style="height: 300px; width: 100%"
        ></div>

        <div class="row">
          <div class="col-md-2">
            <div thumbsSlider class="swiper productSwiper mb-3 mb-lg-0">
              <div class="swiper-wrapper">
                <%product.images.forEach(image => { %>
                <div class="swiper-slide">
                  <div class="product-thumb rounded cursor-pointer">
                    <img src="<%=image %>" alt="" class="img-fluid" />
                  </div>
                </div>
                <% }); %>
              </div>
            </div>
          </div>
          <!--end col-->
          <div class="col-md-10">
            <div
              class="bg-light rounded-2 position-relative ribbon-box overflow-hidden"
            >
              <div class="swiper productSwiper2">
                <div class="swiper-wrapper">
                  <%product.images.forEach(image => { %>
                  <div class="swiper-slide">
                    <div
                      id="img-container"
                      class="product-thumb rounded cursor-pointer"
                    >
                      <img src="<%=image %>" alt="" class="img-fluid" />
                    </div>
                  </div>
                  <% }); %>
                </div>
                <div class="swiper-button-next bg-transparent"></div>
                <div class="swiper-button-prev bg-transparent"></div>
              </div>
            </div>
          </div>
          <!--end col-->
          <div class="col-lg-12">
            <div class="mt-3">
              <div class="hstack gap-2">
                <a
                  href="#ecommerceCart"
                  type="button"
                  class="btn btn-success btn-hover w-100"
                  data-bs-toggle="offcanvas"
                  data-custom-data="<%=product._id %>"
                >
                  <i class="bi bi-basket2 me-2"></i> Add To Cart
                </a>
                <button type="button" class="btn btn-primary btn-hover w-100">
                  <i class="bi bi-cart2 me-2"></i> Buy Now
                </button>
                <button
                  class="btn btn-soft-danger custom-toggle btn-hover"
                  data-bs-toggle="button"
                  aria-pressed="true"
                >
                  <span class="icon-on"><i class="ri-heart-line"></i></span>
                  <span class="icon-off"><i class="ri-heart-fill"></i></span>
                </button>
              </div>
            </div>
          </div>
          <!--end col-->
        </div>
        <!--end row-->
      </div>

      <!--end col-->
      <div class="col-lg-5 ms-auto">
        <div class="ecommerce-product-widgets mt-4 mt-lg-0">
          <div class="mb-4">
            <div class="d-flex gap-3 mb-2">
              <div class="fs-15 text-warning">
                <i class="ri-star-fill align-bottom"></i>
                <i class="ri-star-fill align-bottom"></i>
                <i class="ri-star-fill align-bottom"></i>
                <i class="ri-star-fill align-bottom"></i>
                <i class="ri-star-half-fill align-bottom"></i>
              </div>
              <span class="fw-medium"> (<%=reviews.length %> Review)</span>
            </div>
            <h4 class="lh-base mb-1"><%=product.title %></h4>
            <p class="text-muted mb-4 text-truncate">
              <%=product.description %>
              <a href="#description-section" class="link-info">Read More</a>
            </p>
            <h5 class="fs-24 mb-4">
              <% const discount_price = product.price -
              (product.price*product.discount/100) %> ₹<%=discount_price %>
              <span class="text-muted fs-14"
                ><del>$₹<%=product.price %></del></span
              >
              <span class="fs-14 ms-2 text-danger">
                (<%=product.discount %>% off)</span
              >
            </h5>
            <ul class="list-unstyled vstack gap-2">
              <% if(product.total_stock >0){ %>
              <li class="">
                <i
                  class="bi bi-check2-circle me-2 align-middle text-success"
                ></i
                >In stock
                <span class="text-secondary">(<%=product.total_stock %>)</span>
              </li>
              <% } %> <% if(product.total_stock == 0){ %>
              <li class="">
                <i class="bi bi-x-circle me-2 align-middle text-danger"></i>Out
                of stock
              </li>
              <% } %> <% if(product.total_stock < 100){ %>
              <li class="">
                <i
                  class="bi bi-exclamation-circle me-2 align-middle text-warning"
                ></i
                >Hurry, Only a few left!
              </li>
              <% } %>
            </ul>
          </div>
          <div class="d-flex align-items-center mb-4">
            <% const max = (product.total_stock < 10)? product.total_stock:10 %>
            <h5 class="fs-15 mb-0">Quantity:</h5>
            <div class="input-step ms-2">
              <button id="minus" type="button" class="minus">–</button>
              <input
                id="product-quantity1"
                type="number"
                class="product-quantity1"
                value="1"
                min="0"
                max="<%=max%>"
                readonly=""
              />
              <button id="plus" type="button" class="plus">+</button>
            </div>
          </div>
          <div class="row gy-3">
            <div class="col-md-6">
              <div>
                <h6 class="fs-14 fw-medium text-muted">Sizes:</h6>
                <ul
                  class="clothe-size list-unstyled hstack gap-2 mb-0 flex-wrap"
                >
                  <% product.sizes.forEach(size => { %>
                  <li>
                    <input
                      type="radio"
                      name="sizes7"
                      id="<%= Object.keys(size)[0] %>"
                    />
                    <label
                      class="avatar-xs btn btn-soft-primary text-uppercase p-0 fs-12 d-flex align-items-center justify-content-center rounded-circle"
                      for="<%= Object.keys(size)[0] %>"
                      ><%= Object.keys(size)[0] %></label
                    >
                  </li>

                  <% }); %>
                </ul>
              </div>
            </div>
            <div class="col-md-6">
              <h6 class="fs-14 fw-medium text-muted">Colors:</h6>
              <ul
                class="clothe-colors list-unstyled hstack gap-1 mb-0 flex-wrap ms-2"
              >
                <% product.colors.forEach(color => {%>
                <li>
                  <input
                    type="radio"
                    name="sizes"
                    id="<%=Object.keys(color)[0] %>"
                  />
                  <label
                    class="avatar-xs btn btn-<%=Object.keys(color)[0] %> p-0 d-flex align-items-center justify-content-center rounded-circle"
                    for="<%=Object.keys(color)[0] %>"
                  ></label>
                </li>

                <%}); %>
              </ul>
            </div>
          </div>
        </div>
      </div>
      <!--end col-->
    </div>
    <!--end row-->
  </div>
  <!--end container-->
</section>

<section id="description-section" class="section pt-0">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <ul class="nav nav-tabs nav-tabs-custom mb-3" role="tablist">
          <li class="nav-item">
            <a
              class="nav-link active"
              data-bs-toggle="tab"
              href="#home1"
              role="tab"
            >
              Description
            </a>
          </li>
          <li class="nav-item">
            <a
              class="nav-link"
              data-bs-toggle="tab"
              href="#profile1"
              role="tab"
            >
              Ratings & Reviews
            </a>
          </li>
        </ul>

        <!-- Tab panes -->
        <div class="tab-content text-muted">
          <!-- description -->
          <div class="tab-pane active" id="home1" role="tabpanel">
            <p class="text-muted fs-15"><%=product.description %></p>
          </div>
          <!-- review -->
          <div class="tab-pane" id="profile1" role="tabpanel">
            <div>
              <div
                class="d-flex flex-wrap gap-4 justify-content-between align-items-center mt-4"
              >
                <div class="flex-shrink-0">
                  <h5 class="fs-15 mb-3 fw-medium">Total Rating's</h5>
                  <h2 class="fw-bold mb-3"><%=reviews.length %></h2>
                </div>
                <hr class="vr" />
                <div class="flex-shrink-0">
                  <h5 class="fs-15 mb-3 fw-medium">Average Rating</h5>
                  <h2 class="fw-bold mb-3">
                    <%=averageRating %>

                    <span class="fs-16 align-middle text-warning ms-2">
                      <% const filledStar = Math.floor(averageRating) %> <%
                      const emptyStar = 5-filledStar %> <% const halfFilled =
                      Math.floor(averageRating)-filledStar %> <% for (let index
                      = 0; index < filledStar; index++) { %>

                      <i class="ri-star-fill"></i>
                      <%} %> <% for (let index = 0; index < halfFilled; index++)
                      { %>
                      <i class="ri-star-half-fill"></i>

                      <i class="ri-star-fill"></i>
                      <%} %> <% for (let index = 0; index < emptyStar; index++)
                      { %>

                      <i class="ri-star-line"></i>
                      <%} %>
                    </span>
                  </h2>
                </div>
                <hr class="vr" />
                <div class="flex-shrink-0 w-xl"></div>
              </div>

              <div class="mt-4" data-simplebar style="max-height: 350px">
                <% reviews.forEach(review => {%>
                <div class="d-flex p-3 border-bottom border-bottom-dashed">
                  <div class="flex-shrink-0 me-3">
                    <img
                      class="avatar-xs rounded-circle"
                      src="/static/frontend/images/users/avatar-5.jpg"
                      alt=""
                    />
                  </div>
                  <div class="flex-grow-1">
                    <div class="d-flex mb-3">
                      <div class="flex-grow-1">
                        <div>
                          <div class="mb-2 fs-12">
                            <% const filledStar = Math.floor(review.rating) %>
                            <% const emptyStar = 5-filledStar %> <% const
                            halfFilled = Math.floor(review.rating)-filledStar %>
                            <% for (let index = 0; index < filledStar; index++)
                            { %>

                            <i class="ri-star-fill"></i>
                            <%} %> <% for (let index = 0; index < halfFilled;
                            index++) { %>
                            <i class="ri-star-half-fill"></i>

                            <i class="ri-star-fill"></i>
                            <%} %> <% for (let index = 0; index < emptyStar;
                            index++) { %>

                            <i class="ri-star-line"></i>
                            <%} %>
                          </div>
                          <h6 class="mb-0"><%=review.userName%></h6>
                        </div>
                      </div>
                      <div class="flex-shrink-0">
                        <p class="mb-0 text-muted">
                          <i
                            class="ri-calendar-event-fill me-2 align-middle"
                          ></i>
                          <% const dateString = new
                          Date(review.created).toLocaleDateString('en-US', {
                          day: '2-digit', month: 'short', year: 'numeric' }); %>
                          <%= dateString %>
                        </p>
                      </div>
                    </div>
                    <div>
                      <p class="mb-0">" <%=review.message%>"</p>
                    </div>
                  </div>
                </div>
                <% });%>
              </div>
              <div class="pt-3">
                <h5 class="fs-18">Add a Review</h5>
                <div>
                  <form action="#" class="form">
                    <div class="d-flex align-items-center mb-3">
                      <span class="fs-14">Your rating:</span>
                      <div class="ms-3">
                        <span class="fs-14">
                          <i class="ri-star-fill text-warning align-bottom"></i
                        ></span>
                        <span class="fs-14">
                          <i class="ri-star-fill text-warning align-bottom"></i
                        ></span>
                        <span class="fs-14">
                          <i class="ri-star-fill text-warning align-bottom"></i
                        ></span>
                        <span class="fs-14">
                          <i class="ri-star-fill text-warning align-bottom"></i
                        ></span>
                        <span class="fs-14">
                          <i
                            class="ri-star-half-fill text-warning align-bottom"
                          ></i
                        ></span>
                      </div>
                    </div>
                    <div class="mb-3">
                      <input
                        class="form-control"
                        name="your-name"
                        placeholder="Title"
                        type="text"
                      />
                    </div>
                    <div class="mb-3">
                      <textarea
                        class="form-control"
                        name="your-comment"
                        placeholder="Enter your comments & reviews"
                        rows="4"
                      ></textarea>
                    </div>
                    <div class="text-end">
                      <button
                        class="btn btn-primary btn-hover"
                        type="submit"
                        value="Submit"
                      >
                        Send Review
                        <i class="ri-send-plane-2-line align-bottom ms-1"></i>
                      </button>
                    </div>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <!--end col-->
    </div>
    <!--end row-->
  </div>
</section>

<section class="section">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-lg-12">
        <div
          class="d-flex align-items-center justify-content-between mb-4 pb-1"
