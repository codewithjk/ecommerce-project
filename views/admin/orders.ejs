                      </li>
                    </ul>
                    <a class="page-item pagination-next" href="#">
                      Next
                      <i class="mdi mdi-chevron-right align-middle ms-1"></i>
                    </a>
                  </div> -->
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <!-- container-fluid -->
    </div>
    <!-- End Page-content -->

    <footer class="footer">
      <div class="container-fluid">
        <div class="row">
          <div class="col-sm-6">
            <script>
              document.write(new Date().getFullYear());
            </script>
