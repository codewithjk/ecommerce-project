<!-- editModal -->
<div id="editModal" class="modal fade zoomIn" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body p-md-5">
        <div class="card">
          <form
            id="createproduct-form"
            autocomplete="off"
            class="needs-validation"
            novalidate
          >
            <div class="card-body">
              <div class="mb-3">
                <label class="form-label" for="product-title-input"
                  >Product title</label
                >

                <input
                  name="title"
                  type="text"
                  class="form-control"
                  id="product-title-input"
                  placeholder="Enter product title"
                  required
                />
                <div class="invalid-feedback">
                  Please enter a product title.
                </div>
              </div>
              <div class="mb-3">
                <label class="form-label">Product description</label>
                <textarea
                  name="description"
                  type="text"
                  class="form-control h-auto"
                  id="descriptionInput"
                  placeholder="Enter product description"
                  rows="5"
                ></textarea>
              </div>

              <div>
                <div class="d-flex align-items-start">
                  <div class="flex-grow-1">
                    <label class="form-label">Product category</label>
                  </div>
                  <div class="flex-shrink-0">
                    <a
                      href="/admin/categories"
                      class="float-end text-decoration-underline"
                      >Add New</a
                    >
                  </div>
                </div>
                <div>
                  <select
                    class="form-select"
                    id="choices-category-input"
                    name="choices-category-input"
                  >
                    <% categories.forEach(category => { %>
                    <option value="<%=category._id  %>">
                      <%=category.title %>
                    </option>

                    <% }); %>
                  </select>
                </div>
                <div class="error-msg mt-1">
                  Please select a product category.
                </div>
              </div>
            </div>
            <div id="images" class="card-body gap-2">
              <div id="image-list" class="d-flex gap-2 overflow-scroll"></div>
              <div
                data-bs-toggle="modal"
                id="image-input"
                class="border border-black rounded p-2 col-md-3 d-flex justify-content-center align-items-center"
              >
                <label for="uploadFile" class="select-image btn btn-primary"
                  >Select Image
                  <i class="display-4 text-muted ri-upload-cloud-2-fill"></i
                ></label>
                <input type="file" id="uploadFile" style="display: none" />
              </div>
              <div class="error-msg mt-1">Please add a product images.</div>
            </div>
            <div class="card-body">
              <!-- end row -->

              <div class="row">
                <div class="col-lg-6 col-sm-6">
                  <div class="mb-3">
                    <label class="form-label" for="product-price-input"
                      >Price</label
                    >
                    <div class="input-group has-validation mb-3">
                      <span class="input-group-text" id="product-price-addon"
                        >₹</span
                      >
                      <input
                        name="price"
                        type="text"
                        class="form-control"
                        id="product-price-input"
                        placeholder="Enter price"
                        aria-label="Price"
                        aria-describedby="product-price-addon"
                        required
                      />
                      <div class="invalid-feedback">
                        Please enter a product price.
                      </div>
                    </div>
                  </div>
                </div>
                <div class="col-lg-6 col-sm-6">
