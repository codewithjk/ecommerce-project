                      >
                      <input
                        name="discount"
                        type="text"
                        class="form-control"
                        id="product-discount-input"
                        placeholder="Enter discount"
                        aria-label="discount"
                        aria-describedby="product-discount-addon"
                        required
                      />
                      <div class="invalid-feedback">
                        Please enter a product discount.
                      </div>
                    </div>
                  </div>
                </div>

                <!-- end col -->
              </div>
              <!-- end row -->

              <div class="row">
                <div class="col-lg-12">
